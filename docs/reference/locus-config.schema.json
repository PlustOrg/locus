{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://locus.dev/schemas/locus-config.schema.json",
  "title": "Locus Config",
  "type": "object",
  "properties": {
    "auth": {
      "type": "object",
      "properties": {
        "jwtSecret": { "type": "string" },
        "adapter": { "type": "string" },
        "requireAuth": { "type": "boolean" }
      },
      "additionalProperties": false
    },
    "performance": {
      "type": "object",
      "properties": {
        "pluginHookWarnMs": { "type": "number" },
        "pluginTimeoutMs": { "type": "number" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true
}
