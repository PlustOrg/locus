{
  "name": "@plust/locus",
  "version": "0.4.0",
  "main": "dist/index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "jest --colors",
    "test:watch": "jest --watchAll --colors",
    "lint": "eslint \"src/**/*.ts\" --max-warnings=0",
    "format": "prettier --write .",
    "tokens:gen": "ts-node scripts/generate_tokens.ts",
    "tokens:check": "ts-node scripts/check_tokens.ts",
    "docs:roadmap": "ts-node scripts/generate_roadmap.ts",
    "next:dev": "echo 'Next dev server stub'",
    "api:dev": "echo 'API dev server stub'",
    "bench:parser": "ts-node scripts/bench_parser.ts scripts/sample.locus 50",
    "bench:assert": "ts-node scripts/bench_assert.ts",
    "release:bump": "ts-node scripts/release_bump.ts",
    "prepare": "npm run build",
    "docs:check": "ts-node scripts/validate-docs.ts",
    "docs:update-hash": "TS_NODE_TRANSPILE_ONLY=1 ts-node scripts/validate-docs.ts --update-hash",
    "perf:baseline": "ts-node scripts/measure_baseline.ts",
    "docs:update-kpis": "ts-node scripts/update_kpis.ts",
    "locus": "dist/index.js",
    "ci:validate": "npm run lint && npm test",
    "parser:regen": "node scripts/generate_tokens.js && node scripts/generate_grammar_spec.js || true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PlustOrg/locus.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PlustOrg/locus/issues"
  },
  "homepage": "https://github.com/PlustOrg/locus#readme",
  "description": "",
  "files": [
    "dist",
    "LICENSE",
    "docs"
  ],
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "eslint": "^9.9.0",
    "fast-check": "^3.17.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.4.0"
  },
  "dependencies": {
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "chevrotain": "10.5.0",
    "chokidar": "^3.6.0",
    "commander": "^14.0.0",
    "ts-custom-error": "^3.3.1"
  }
}