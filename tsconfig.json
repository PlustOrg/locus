{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
  "types": ["node", "jest"],
  "resolveJsonModule": true
  },
  "include": ["src", "package.json"],
  "exclude": ["node_modules", "dist", "tests", "src/runtime"]
}
